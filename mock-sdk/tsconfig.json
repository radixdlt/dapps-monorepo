{
	"compilerOptions": {
		"lib": ["ES2015", "DOM"],
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"rootDir": "src",
		"outDir": "build",
		"declaration": true,
		"noImplicitAny": false
	}
}
