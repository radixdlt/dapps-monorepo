{{ $DASHBOARD_IMAGE_TAG := .StateValues.ci.tag }} 
image: 
    tag: {{$DASHBOARD_IMAGE_TAG}}

ingress:
  enabled: true
  annotations:
    kubernetes.io/ingress.class: nginx
  hosts:
    - host: dashboard-pr-{{ .StateValues.ci.prNumber }}.rdx-works-main.extratools.works
      paths:
        - path: /
          pathType: ImplementationSpecific