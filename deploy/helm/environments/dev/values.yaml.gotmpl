{{ $IMAGE_TAG := .StateValues.ci.tag }} 

storybook:
  image: 
      tag: {{$IMAGE_TAG}}

  ingress:
    enabled: true
    annotations:
      kubernetes.io/ingress.class: nginx
    hosts:
      - host: dev-dashboard-storybook.rdx-works-main.extratools.works
        paths:
          - path: /
            pathType: ImplementationSpecific

dashboard:
  image: 
      tag: {{$IMAGE_TAG}}

  params:
    URL: https://dev-dashboard.rdx-works-main.extratools.works

  secrets:
  - name: database-url
    variable: "DATABASE_URL"
    path: "rdx-works-main-dev/eks/dashboard/postgres"
    secretProperty: "database-url-hammunet"
    secretName: "database-url"
    region: "eu-west-2"

  ingress:
    enabled: true
    annotations:
      kubernetes.io/ingress.class: nginx
    hosts:
      - host: dev-dashboard.rdx-works-main.extratools.works
        paths:
          - path: /
            pathType: ImplementationSpecific
  autoscaling:
    enabled: true
    minReplicas: 2
    maxReplicas: 20
    targetCPUUtilizationPercentage: 80
    targetMemoryUtilizationPercentage: 80
  resources:
    limits:
      cpu: 475m
      memory: 256Mi
    requests:
      cpu: 475m
      memory: 256Mi

developerAccess:
  pod:
    exec:
      enabled: true

alertmanager:
  env: "non-prod"
  nameOverride: "dashboard-amcfg"
  slackConfig:
    channel: "feed--alerts-dev-dashboard"
  secrets:
    region: eu-west-2
    name: "rdx-works-main-dev/eks/dashboard/dev/alertmanager-integration-keys"
